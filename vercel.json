{
    "version": 2,
    "builds": [
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "api/**/*",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/submit_activity",
            "dest": "/api/submit_activity.js"
        },
        {
            "src": "/api/update_payment",
            "dest": "/api/update_payment.js"
        },
        {
            "src": "/.*",
            "dest": "/public/index.html"
        }
    ]
}
